   <children>
      <Text fx:id="cardTitle" fill="#212121" layoutX="81.0" layoutY="32.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Title" textAlignment="CENTER">
         <font>
            <Font name="Times New Roman" size="20.0" />
         </font>
      </Text>
      <TextArea fx:id="cardTextArea" disable="true" layoutY="50.0" prefHeight="150.0" prefWidth="200.0" style="-fx-background-color: #e4ff1a;" wrapText="true">
         <font>
            <Font name="SansSerif Regular" size="16.0" />
         </font>
      </TextArea>
   </children>
</AnchorPane>
